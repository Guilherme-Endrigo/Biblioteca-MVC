@model BibliotecaImpacta.Models.Cliente
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Cliente</h1>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Nome"><i class="fas fa-user"></i></span>
            </div>
            <input asp-for="Nome" class="form-control" />
        </div>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Telefone"><i class="fas fa-phone"></i></span>
            </div>
            <input asp-for="Telefone" class="form-control" />
        </div>
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Endereço"><i class="fas fa-map-marker-alt"></i></span>
            </div>
            <input asp-for="Endereço" class="form-control" />
        </div>
        <span asp-validation-for="Endereço" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Idade"><i class="fas fa-birthday-cake"></i></span>
            </div>
            <input asp-for="Idade" class="form-control" />
        </div>
        <span asp-validation-for="Idade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Categoria Favorita"><i class="fas fa-tags"></i></span>
            </div>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
        </div>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-secondary" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
