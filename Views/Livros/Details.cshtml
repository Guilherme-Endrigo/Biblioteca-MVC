@model BibliotecaImpacta.Models.Livro
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Livro</h1>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" title="Nome"><i class="fas fa-book"></i></span>
        </div>
        <input value="@Html.DisplayFor(model => model.Nome)" class="form-control" readonly />
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" title="Autor"><i class="fas fa-user"></i></span>
        </div>
        <input value="@Html.DisplayFor(model => model.Autor)" class="form-control" readonly />
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" title="Editora"><i class="fas fa-building"></i></span>
        </div>
        <input value="@Html.DisplayFor(model => model.Editora)" class="form-control" readonly />
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" title="Ano"><i class="fas fa-calendar-alt"></i></span>
        </div>
        <input value="@Html.DisplayFor(model => model.Ano)" class="form-control" readonly />
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text" title="Categoria"><i class="fas fa-tags"></i></span>
        </div>
        <input value="@Html.DisplayFor(model => model.Categoria.Descricao)" class="form-control" readonly />
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
