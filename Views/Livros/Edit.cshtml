@model BibliotecaImpacta.Models.Livro
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Livro</h1>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Nome"><i class="fas fa-book"></i></span>
            </div>
            <input asp-for="Nome" class="form-control" />
        </div>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Autor"><i class="fas fa-user"></i></span>
            </div>
            <input asp-for="Autor" class="form-control" />
        </div>
        <span asp-validation-for="Autor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Editora"><i class="fas fa-building"></i></span>
            </div>
            <input asp-for="Editora" class="form-control" />
        </div>
        <span asp-validation-for="Editora" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Ano"><i class="fas fa-calendar-alt"></i></span>
            </div>
            <input asp-for="Ano" class="form-control" />
        </div>
        <span asp-validation-for="Ano" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" title="Categoria"><i class="fas fa-tags"></i></span>
            </div>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
        </div>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-secondary">Atualizar</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}