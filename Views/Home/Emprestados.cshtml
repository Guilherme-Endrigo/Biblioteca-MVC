@model BibliotecaImpacta.ViewModels.EmprestadosViewModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

@{
    ViewData["Title"] = "Emprestados";
}

<h1>Emprestados</h1>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Nome Livro</th>
            <th>Data Devolução</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emprestimo in Model.Emprestados)
        {
            <tr>
                <td>@emprestimo.Livro.Nome</td>
                <td>
                    @if (emprestimo.DataDevolucao != null)
                    {
                        @emprestimo.DataDevolucao
                    }
                    else
                    {
                        <span class="text-warning">Ainda não devolvido</span>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-controller="Home" asp-route-Id="@emprestimo.Id" title="Editar"><i class="fas fa-edit"></i></a>
                    <a asp-action="Deletar" asp-controller="Home" asp-route-Id="@emprestimo.Id" title="Devolver"><i class="fas fa-undo"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>